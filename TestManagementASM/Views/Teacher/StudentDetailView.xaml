<UserControl x:Class="TestManagementASM.Views.Teacher.StudentDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#1E88E5"
                Padding="20">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding BackCommand}"
                        Width="35"
                        Height="35"
                        Background="#1565C0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <TextBlock Text="â†"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Button>
                <TextBlock Text="CHI TIáº¾T ÄIá»‚M SINH VIÃŠN"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Student Information Card -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="25"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding CurrentStudent.FullName}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#1E88E5"
                                       Margin="0,0,0,10"/>

                            <TextBlock FontSize="14"
                                       Foreground="#666"
                                       Margin="0,0,0,5">
                                <Run Text="Email: "/>
                                <Run Text="{Binding CurrentStudent.Email}"
                                     FontWeight="SemiBold"/>
                            </TextBlock>

                            <TextBlock FontSize="14"
                                       Foreground="#666"
                                       Margin="0,0,0,5">
                                <Run Text="Lá»›p: "/>
                                <Run Text="{Binding CurrentClass.ClassName}"
                                     FontWeight="SemiBold"/>
                            </TextBlock>

                            <TextBlock FontSize="14"
                                       Foreground="#666">
                                <Run Text="MÃ´n há»c: "/>
                                <Run Text="{Binding CurrentClass.Subject.SubjectName}"
                                     FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Top">
                            <Border Background="#E3F2FD"
                                    BorderBrush="#1E88E5"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Äiá»ƒm trung bÃ¬nh"
                                               FontSize="12"
                                               Foreground="#666"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding AverageScore, StringFormat={}{0:F2}}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#1E88E5"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#E8F5E9"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="HoÃ n thÃ nh"
                                               FontSize="12"
                                               Foreground="#666"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock HorizontalAlignment="Center">
                                        <Run Text="{Binding CompletedTests}"
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="#4CAF50"/>
                                        <Run Text="/"
                                             FontSize="20"
                                             Foreground="#666"/>
                                        <Run Text="{Binding TotalTests}"
                                             FontSize="20"
                                             Foreground="#666"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Button Command="{Binding RefreshCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="15,10"
                                    Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„"
                                               FontSize="14"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="LÃ m má»›i"
                                               FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Test Attempts Table -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Lá»‹ch sá»­ lÃ m bÃ i"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1E88E5"
                                   Margin="0,0,0,15"/>

                        <!-- Table Header -->
                        <Border Background="#E3F2FD"
                                BorderBrush="#1E88E5"
                                BorderThickness="0,0,0,2"
                                Padding="15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="TÃªn bÃ i thi"
                                           FontWeight="Bold"
                                           Foreground="#1565C0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Thá»i gian lÃ m bÃ i"
                                           FontWeight="Bold"
                                           Foreground="#1565C0"/>
                                <TextBlock Grid.Column="2"
                                           Text="Äiá»ƒm"
                                           FontWeight="Bold"
                                           Foreground="#1565C0"
                                           TextAlignment="Center"/>
                                <TextBlock Grid.Column="3"
                                           Text="Tráº¡ng thÃ¡i"
                                           FontWeight="Bold"
                                           Foreground="#1565C0"
                                           TextAlignment="Center"/>
                                <TextBlock Grid.Column="4"
                                           Text="Thá»i lÆ°á»£ng"
                                           FontWeight="Bold"
                                           Foreground="#1565C0"
                                           TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Table Content -->
                        <ScrollViewer MaxHeight="400"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TestAttempts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0"
                                                BorderThickness="0,0,0,1"
                                                Padding="15,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Test.TestName}"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding StartTime, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                           Foreground="#666"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Score, StringFormat={}{0}/100}"
                                                           TextAlignment="Center"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground"
                                                                    Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Score}">
                                                                    <DataTrigger.Value>
                                                                        <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">0</sys:Int32>
                                                                    </DataTrigger.Value>
                                                                    <Setter Property="Foreground"
                                                                            Value="#999"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <Border Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        CornerRadius="12"
                                                        Padding="10,5">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background"
                                                                    Value="#E8F5E9"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AttemptStatus}"
                                                                             Value="In Progress">
                                                                    <Setter Property="Background"
                                                                            Value="#FFF3E0"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding AttemptStatus}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground"
                                                                        Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding AttemptStatus}"
                                                                                 Value="In Progress">
                                                                        <Setter Property="Foreground"
                                                                                Value="#FF9800"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>

                                                <TextBlock Grid.Column="4"
                                                           TextAlignment="Center"
                                                           Foreground="#666"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} phÃºt">
                                                            <Binding Path="Test.DurationMinutes"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State -->
                        <TextBlock Text="Sinh viÃªn chÆ°a lÃ m bÃ i thi nÃ o"
                                   FontStyle="Italic"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,30,0,0"
                                   Visibility="{Binding TestAttempts.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <Border Background="#80FFFFFF"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Padding="20"
                        Margin="0,20,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Äang táº£i dá»¯ liá»‡u..."
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1E88E5"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

