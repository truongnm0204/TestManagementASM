<UserControl x:Class="TestManagementASM.Views.Admin.UserFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" MaxWidth="400">
            <!-- Title -->
            <TextBlock Text="{Binding IsEditMode, StringFormat='Cập nhật người dùng|Tạo người dùng mới'}"
                       FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,10"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Username -->
            <TextBlock Text="Username:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
            <TextBox Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10" FontSize="12" Margin="0,0,0,15"
                     IsEnabled="{Binding IsEditMode, Converter={StaticResource InvertBoolConverter}}"/>

            <!-- Password (only for create) -->
            <TextBlock Text="Mật khẩu:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"
                       Visibility="{Binding IsEditMode, Converter={StaticResource InvertBoolToVisibilityConverter}}"/>
            <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="12" Margin="0,0,0,15"
                         Visibility="{Binding IsEditMode, Converter={StaticResource InvertBoolToVisibilityConverter}}"/>

            <!-- Full Name -->
            <TextBlock Text="Họ tên:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
            <TextBox Text="{Binding User.FullName, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10" FontSize="12" Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
            <TextBox Text="{Binding User.Email, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10" FontSize="12" Margin="0,0,0,15"/>

            <!-- Role -->
            <TextBlock Text="Vai trò:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Roles}" SelectedValuePath="RoleId" DisplayMemberPath="RoleName"
                      SelectedValue="{Binding User.RoleId}" Padding="10" FontSize="12" Margin="0,0,0,15"/>

            <!-- Status -->
            <CheckBox Content="Hoạt động" IsChecked="{Binding User.Status}" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button Command="{Binding SaveCommand}" Content="Lưu" 
                        Padding="15,8" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontSize="12"/>
                <Button Command="{Binding CancelCommand}" Content="Hủy" 
                        Padding="15,8" Background="#f44336" Foreground="White" FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

