<UserControl x:Class="TestManagementASM.Views.Admin.TeacherAssignmentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" MaxWidth="600">
            <!-- Title -->
            <TextBlock Text="Gán giáo viên cho lớp"
                       FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20"/>

            <!-- Two Column Layout -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Available Teachers -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Giáo viên có sẵn:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding AvailableTeachers}" SelectedItem="{Binding SelectedAvailableTeacher}"
                            Height="250" Margin="0,0,10,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FullName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                    <Button Command="{Binding AssignCommand}" Content="→" 
                           Width="50" Height="40" Margin="0,0,0,10" Background="#4CAF50" Foreground="White"/>
                    <Button Command="{Binding RemoveCommand}" Content="←" 
                           Width="50" Height="40" Background="#f44336" Foreground="White"/>
                </StackPanel>

                <!-- Assigned Teachers -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Giáo viên được gán:" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding AssignedTeachers}" SelectedItem="{Binding SelectedAssignedTeacher}"
                            Height="250" Margin="10,0,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FullName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>

            <!-- Close Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding CloseCommand}" Content="Đóng" 
                       Padding="15,8" Background="#2196F3" Foreground="White" FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

