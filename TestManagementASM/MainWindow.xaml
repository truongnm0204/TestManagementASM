<Window x:Class="TestManagementASM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestManagementASM"
        xmlns:viewmodels="clr-namespace:TestManagementASM.ViewModels"
        xmlns:views="clr-namespace:TestManagementASM.Views"
        mc:Ignorable="d"
        Title="Hệ thống Quản lý Bài kiểm tra"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- DataTemplate Mapping -->
        <DataTemplate DataType="{x:Type viewmodels:SubjectListViewModel}">
            <views:SubjectListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserListViewModel}">
            <views:UserListView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1E88E5" BorderBrush="#1565C0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <Border Grid.Row="0" Background="#1565C0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="TEST MANAGER"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Quản lý bài kiểm tra"
                                  FontSize="11"
                                  Foreground="#B3E5FC"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button Command="{Binding NavigateToSubjectsCommand}"
                           Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📚" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý môn học" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NavigateToUsersCommand}"
                           Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý người dùng" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="15,20" Background="#42A5F5"/>

                    <TextBlock Text="CÁC CHỨC NĂNG KHÁC"
                              Foreground="#B3E5FC"
                              FontSize="11"
                              FontWeight="SemiBold"
                              Margin="20,0,0,10"/>

                    <Button IsEnabled="False"
                           Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý bài kiểm tra" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button IsEnabled="False"
                           Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❓" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="Ngân hàng câu hỏi" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- User Info & Logout -->
                <Border Grid.Row="2" Background="#1565C0" Padding="15">
                    <StackPanel>
                        <Border Background="#1E88E5" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentUserName}"
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          FontSize="13"
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding CurrentUserRole}"
                                          Foreground="#B3E5FC"
                                          FontSize="11"
                                          Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <Button Command="{Binding LogoutCommand}"
                               Background="#E53935"
                               Foreground="White"
                               BorderThickness="0"
                               Height="35"
                               FontWeight="SemiBold"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C62828"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🚪" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Đăng xuất" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#FAFAFA">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>
    </Grid>
</Window>
